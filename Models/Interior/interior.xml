<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>planchet</object-name>
    <object-name>cloison</object-name>
    <object-name>siege1</object-name>
    <object-name>siege2</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreAvG</object-name>
    <object-name>intvitreAvD</object-name>
    <object-name>intvitreArG1</object-name>
    <object-name>intvitreArG2</object-name>
    <object-name>intvitreArD1</object-name>
    <object-name>intvitreArD2</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreAvG</object-name>
    <object-name>intvitreAvD</object-name>
    <object-name>intvitreArG1</object-name>
    <object-name>intvitreArG2</object-name>
    <object-name>intvitreArD1</object-name>
    <object-name>intvitreArD2</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreAvG</object-name>
    <object-name>intvitreAvD</object-name>
    <object-name>intvitreArG1</object-name>
    <object-name>intvitreArG2</object-name>
    <object-name>intvitreArD1</object-name>
    <object-name>intvitreArD2</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/dhc3/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -3.999 </x-m>
      <y-m> -0.355 </y-m>
      <z-m> -0.064 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/dhc3/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -4.569 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.085 </z-m>
    </offsets>
  </model>

  <!-- Les sièges passagers -->
  <!-- Coté droit -->
  <model>
    <path>Aircraft/dhc3/Models/Interior/seatR.xml</path>
    <offsets>
      <x-m> -3.028 </x-m>
      <y-m>  0.544 </y-m>
      <z-m> -0.244 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/dhc3/Models/Interior/seatR.xml</path>
