<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>skis.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>skiG</object-name>
    <object-name>skiD</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>skiG</object-name>
    <object-name>skiD</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
  </animation>

  <!-- Effets sur le sol -->
  <!-- Gauche -->
  <model>
    <path>Aircraft/dhc3/Models/Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -3.770 </x-m>
      <y-m> -1.780 </y-m>
      <z-m> -2.156 </z-m>
    </offsets>
  </model>

  <!-- Droite -->
  <model>
    <path>Aircraft/dhc3/Models/Effects/ground/ground1.xml</path>
    <offsets>
      <x-m> -3.770 </x-m>
      <y-m>  1.780 </y-m>
      <z-m> -2.156 </z-m>
    </offsets>
  </model>

  <!-- Roulette -->
  <model>
    <path>Aircraft/dhc3/Models/Effects/ground/ground2.xml</path>   
    <offsets>
      <x-m> -5.156 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.680 </z-m>
    </offsets>
  </model>

</PropertyList>
