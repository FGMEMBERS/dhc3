  </gear>

  <gear x="2.364" y="-1.64" z="-2.1"
	  compression="0.2"
	  spring="10"
	  sfric="1.5"
	  dfric="1.3"
	  skid="1"
	  ignored-by-solver="1">
  </gear>

  <gear x="-0.894" y="1.64" z="-1.8"
	  compression="0.2"
	  spring="10"
	  sfric="1.5"
	  dfric="1.3"
	  skid="1"
	  ignored-by-solver="1">
  </gear>

  <gear x="-0.894" y="-1.64" z="-1.8"
	  compression="0.2"
	  spring="10"
