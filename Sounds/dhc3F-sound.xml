<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <fx>
    <crank>
        <name>cranking</name>
        <mode>looped</mode>
        <path>Aircraft/dhc3/Sounds/starter.wav</path>
        <condition>
            <property>/engines/engine/cranking</property>
        </condition>
        <volume>
            <property>/engines/engine/cranking</property>
            <offset>0.5</offset>
        </volume>
        <position>
            <x>-2.0</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>5.0</reference-dist>
        <max-dist>10.0</max-dist>
    </crank>

    <engine>
        <name>enginerun</name>
        <mode>looped</mode>
        <path>Sounds/wasp.wav</path>
        <condition>
            <property>/engines/engine/running</property>
        </condition>
        <volume>
            <property>/controls/engines/engine/throttle</property>
            <min>0.5</min>
            <max>1.00</max>
        </volume>
        <pitch>
            <property>/engines/engine/rpm</property>
            <factor>0.0004</factor>
            <offset>0.2</offset>
        </pitch>
        <position>
            <x>-2.0</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>150.0</reference-dist>
        <max-dist>1000.0</max-dist>
    </engine>

    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Sounds/wave.wav</path>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
          <property>/gear/gear[3]/wow</property>
        </or>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <type>log</type>
        <factor>0.25</factor>
      </volume>
    </rumble>

    <squeal>
     <name>water</name>
     <path>Sounds/wave.wav</path>
     <condition>
       <or>
         <property>/gear/gear[0]/wow</property>
         <property>/gear/gear[1]/wow</property>
         <property>/gear/gear[2]/wow</property>
         <property>/gear/gear[3]/wow</property>
       </or>
     </condition>
     <volume>
       <property>/velocities/speed-down-fps</property>
       <factor>0.5</factor>
       <max>1.0</max>
     </volume>
     <volume>
       <property>/velocities/speed-down-fps</property>
       <factor>0.5</factor>
       <max>1.0</max>
     </volume>
    </squeal>

    <flap>
        <name>flaps</name>
        <mode>in-transit</mode>
        <path>Sounds/flaps.wav</path>
        <property>/surface-positions/flap-pos-norm</property>
        <volume>
            <factor>0.15</factor>
        </volume>
        <position>
            <x>1.0</x>
            <y>0</y>
            <z>1</z>
        </position>
        <reference-dist>2.5</reference-dist>
        <max-dist>5.0</max-dist>
    </flap>

    <wind>
        <name>wind</name>
        <mode>looped</mode>
        <path>Sounds/wind.wav</path>
        <property>velocities/airspeed-kt</property>
        <volume>
            <property>position/altitude-ft</property>
            <factor>-0.000015</factor>
            <offset>1.0</offset>
            <min>0.1</min>
            <max>1.0</max>
        </volume>
        <volume>
            <property>velocities/airspeed-kt</property>
            <factor>0.0015</factor>
            <min>0.03</min>
            <max>0.25</max>
        </volume>
        <pitch>
            <property>velocities/airspeed-kt</property>
            <factor>0.01</factor>
            <offset>1.0</offset>
        </pitch>
        <position>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </position>
        <max-dist>2</max-dist>
        <reference-dist>1</reference-dist>
    </wind>

    <stall>
        <name>stall</name>
        <mode>looped</mode>
        <path>Sounds/stall.wav</path>
        <property>sim/alarms/stall-warning</property>
        <volume>
            <property>/sim/alarms/stall-warning</property>
            <max>1.0</max>
        </volume>
        <position>
            <x>-0.5</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>4.0</max-dist>
    </stall>

 <!--                  Toggle Switches                  -->     

    <switch>
        <name>click on</name>
        <mode>once</mode>
        <path>Sounds/click.wav</path>
        <condition>
            <property>sim/Sounds/switch</property>
        </condition>
        <volume>
            <offset>0.7</offset>
        </volume>
        <position>
            <x>-0.5</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>4.0</max-dist>
    </switch>

    <switch>
        <name>click off</name>
        <mode>once</mode>
        <path>Sounds/click.wav</path>
        <condition>
            <not>
                <property>sim/Sounds/switch</property>
            </not>
        </condition>
        <volume>
            <offset>0.7</offset>
        </volume>
        <position>
            <x>-0.5</x>
            <y>0</y>
            <z>0</z>
        </position>
        <reference-dist>2.0</reference-dist>
        <max-dist>4.0</max-dist>
    </switch>

    <rain>
      <name>rain</name>
      <mode>looped</mode>
      <path>Aircraft/dhc3/Sounds/rain_canopy.wav</path>
      <condition>
        <greater-than>
          <property>/environment/metar/rain-norm</property>
          <value>0.2</value>
        </greater-than>
      </condition>
      <volume>
        <property>/environment/metar/rain-norm</property>
        <factor>1.00</factor>
        <offset>0.00</offset>
        <min>0.4</min>
        <max>0.9</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.001</factor>
        <offset>1.0</offset>
      </pitch>
    </rain>

  </fx>

</PropertyList>
