<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList include="dhc3-base.xml">

  <sim>
    
    <description>DHC 3 Otter with wheels (YASim)</description>
    <author>Emmanuel BARANGER (3D/FDM), Pierre GEOFFROY (FDM), Laurent HAYVEL (Texture)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>0.1 Alpha</status>
    <flight-model>yasim</flight-model>
    <aero>dhc3W-yasim</aero>
    
    <rating>
      <FDM type="int">     3 </FDM>
      <systems type="int"> 3 </systems>
      <cockpit type="int"> 3 </cockpit>
      <model type="int">   4 </model>
    </rating>
    
    <model>
      <path archive="y">Aircraft/dhc3/Models/dhc3W.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>
    
    <sound>
      <path>Aircraft/dhc3/Sounds/dhc3-sound.xml</path>
    </sound>
    
    <startup>
      <splash-texture>Aircraft/dhc3/Splashs/dhc3W-splash.png</splash-texture>
    </startup>
    
    <help include="Systems/dhc3-help.xml"/>
    
  </sim>

  <input>
    <keyboard include="Systems/dhc3-keyboard.xml"/>
  </input>
  
</PropertyList>
